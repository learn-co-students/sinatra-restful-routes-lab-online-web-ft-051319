<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
<h1> Edit <%= @recipe.name %></h1>
    <label for="recipe_name"> Recipe Name: </label>
    <input type="text" name="name" value="<%= @recipe.name %>"> <br>
    <label for="ingredients"> Ingredients: </label>
    <input type="text" name="ingredients"value=" <%= @recipe.ingredients %>"><br>
    <label for="cook_time"> Cook Time: </label>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br><br>
    <input type="submit" value="Edit <%= @recipe.name %>">
</form>